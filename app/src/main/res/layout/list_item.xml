<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      card_view:cardBackgroundColor="#C2FCFC"
        card_view:cardCornerRadius="6dp"
        >
        <!--android:startColor="#E8E8E8"-->
        <!--android:cardendColor="#FCCE01"-->
        <!--android:type="linear"-->


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/info_text1"
            android:layout_width="wrap_content"
            android:textSize="29dp"
            android:textColor="#0501FC"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:id="@+id/image_icon1"
            android:clickable="true"
            android:src="@drawable/ic_check"
            android:layout_gravity="right"
            android:layout_marginRight="42dp"
            android:layout_marginEnd="42dp"
            android:layout_below="@+id/info_text1"
            android:layout_toLeftOf="@+id/image_icon2"
            android:layout_toStartOf="@+id/image_icon2"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/image_icon2"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:src="@drawable/ic_close"
            android:clickable="true"
            android:layout_gravity="left"
            android:layout_above="@+id/info_text2"
            android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/info_text3"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Your attendence in this subject is:"
        android:textSize="16dp"
        android:layout_alignTop="@+id/info_text2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_text2"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_below="@+id/image_icon1"
android:layout_toRightOf="@+id/info_text3"
            android:layout_marginTop="20dp" />

            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Remove"-->
                <!--style="@style/Base.Widget.AppCompat.Button.Colored"-->
                <!--android:background="#149CBD"-->
                <!--android:textColor="#fff"-->
                <!--android:id="@+id/button"-->
                <!--android:bottomLeftRadius="7dp"-->
                <!--android:bottomRightRadius="7dp"-->
                <!--android:topLeftRadius="7dp"-->
                <!--android:topRightRadius="7dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentEnd="true" />-->
            <Button
                android:id="@+id/button"



                android:text="Remove"

                android:textSize="15sp"

                android:layout_width="70dp"
                android:layout_height="37dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/image_icon2" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>